<html>
  <head>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
  </head>
  <body>
    <form method="POST" id="searchForm">
      <div class="form-row align-items-center">
        <div class="col-auto">
          <label class="sr-only" for="inlineFormInput">Search for submission</label>
          <input type="text" class="form-control mb-2" id="inlineFormInput" name="employee" required placeholder="Search for submission">
        </div>
        <div class="col-auto">
          <button id="searchSubmit" class="btn btn-primary mb-2">Submit</button>
        </div>
      </div>
    </form>
        <script>
      $(document).ready(() => {
        $('#searchSubmit').on('click', () => {
          let URLSearch = '';
          console.log('I am in jquery')
          queryString = location.search;
          let searchString = $('#inlineFormInput').val();
          URLSearch = `/admin/dashboard/${queryString}&searchString=${searchString}`;
          console.log(URLSearch);
          $('#searchForm').attr('action', URLSearch);
        });
      })
    </script>
  </body>
</html>
