<h2>{{title}}</h2>
{{#if result}}
{{#with result}}
<div class="container">
<form>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputEmail4">Employee #</label>
      <input type="input" class="form-control" value="{{employeeNum}}" id="inputEmail4" placeholder="Employee #">
    </div>
    <div class="form-group col-md-6">
      <label for="inputPassword4">Employee Name</label>
      <input type="input" class="form-control" value="{{firstName}} {{lastName}}" id="inputPassword4" placeholder="Employee Name">
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-9">
      <label for="inputAddress">Address</label>
      <input type="input" class="form-control" value="{{address}}" id="inputAddress" placeholder="Address">
    </div>
    <div class="form-group col-md-3">
      <label for="inputAddress2">Apt</label>
      <input type="input" class="form-control" value="{{apt}}" id="inputAddress2" placeholder="Apt">
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-4">
      <label for="inputAddress">City</label>
      <input type="input" class="form-control" value="{{city}}" id="inputAddress" placeholder="City">
    </div>
    <div class="form-group col-md-4">
      <label for="inputAddress2">State</label>
      <input type="input" class="form-control" value="{{state}}" id="inputAddress2" placeholder="State">
    </div>
    <div class="form-group col-md-4">
      <label for="inputAddress2">Zip</label>
      <input type="input" class="form-control" value="{{zip}}" id="inputAddress2" placeholder="Zip">
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-4">
      <label for="inputCity">Cost</label>
      <input type="input" class="form-control" value="{{cost}}" id="inputCity" placeholder="Cost">
    </div>
  
    <div class="form-group col-md-4">
      <label for="inputState">Quantity</label>
      <input type="input" id="inputState" value="{{quantity}}" class="form-control" placeholder="Quantity">
    </div>
    <div class="form-group col-md-4">
      <label for="inputZip">Size</label>
      <input type="input" class="form-control" value="{{size}}" id="inputZip" placeholder="Size">
    </div>
  </div>
  {{{detailsReturnBtn 'uniform'}}}
</form>
</div>
{{/with}}
{{/if}}