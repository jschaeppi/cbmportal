<h2> {{title}}
{{#if result}}
{{#with result}}
for {{employeeName}}</h2>
<div id="formContent" class="container m-auto text-left">
<form>
  <div class="form-group">
    <label for="exampleFormControlInput1">Employee Num</label>
    <input type="number" class="form-control" value={{employeeNum}} id="exampleFormControlInput1" placeholder="Employee Num">
  </div>
  <div class="form-group ">
    <label for="exampleFormControlInput1">Employee Name</label>
    <input type="text" class="form-control" value="{{employeeName}}" id="exampleFormControlInput1" placeholder="Employee Name">
  </div>
  <div class="form-group">
      <table class="table table-responsive-md ">
        <tbody>
          <tr>
            <td class="text-center">Date</td>
            <td class="text-center">Starting Point</td>
            <td class="text-center">Destination Point</td>
          </tr>
            {{{mileageDetailsLoop mileage 'mileage'}}}
        </tbody>
    </table>
  </div>
  <input type="hidden" value="{{_id}}">
  {{{detailsReturnBtn 'mileage'}}}
  <div class="dropdown-divider" role="separator"></div>
</form>
{{/with}}
{{/if}}
</div>