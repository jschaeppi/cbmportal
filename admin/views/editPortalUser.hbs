 <div class="info-form" width="100%">
    <form method="POST" class="form-line justify-content-center" action="../editPortalUser" autocomplete="off">
        {{#with result}}
        <input type="hidden" name="id" value="{{_id}}" />
        <div class="form-group row w-50 mx-auto">
            <label for="inputStore" class="col-sm-2 col-form-label">Employee Name</label>
            <div class="col-sm-10">
            <input type="text" class="form-control" value="{{fullName}}" id="inputStore" name="fullName" placeholder="Employee Name">
            </div>
        </div>
        <div class="form-group row w-50 mx-auto">
            <label for="inputuserame" class="col-sm-2 col-form-label">Username</label>
            <div class="col-sm-10">
            <input type="text" class="form-control" value="{{username}}" id="inputusername" name="username" placeholder="Username for employee">
            </div>
        </div>
        {{!-- <div class="form-group row w-50 mx-auto">
            <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
            <input type="password" class="form-control" id="inputPassword" name="password" placeholder="password">
            </div>
        </div> --}}
        <div class="form-group row w-50 mx-auto">
            <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
            <input type="email" class="form-control" value="{{email}}" id="inputEmail" name="email" placeholder="email">
            </div>
        </div>
        <div class="form-group row w-50 mx-auto">
            <label for="inputDistrict" class="col-sm-2 col-form-label">District</label>
            <div class="col-sm-10">
                <select class="form-control" id="inputDistrict" name="district" placeholder="District">
                    {{{setDistrict district}}}
                </select>
            </div>
        </div>
        <div class="form-group row w-50 mx-auto">
            <label for="inputPermission" class="col-sm-2 col-form-label">Permission Level</label>
            <div class="col-sm-10">
                <select class="form-control" id="inputPermission" value={{permission}} name="permission" placeholder="Permission">
                    {{{setUserPermission permission}}}
                </select>
            </div>
        </div>
        <div class="form-group row mx-auto">
            <div class="col-sm-10">
            {{{makeLink 'portalUsers' '' "primary" "Back" }}}
            <button type="submit" class="btn btn-primary">Update</button>
            </div>
        </div>
        {{/with}}
    </div>
</form>