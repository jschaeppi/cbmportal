<div class="container">
<script>Handlebars.registerPartial('searchResults', '../partials/search.hbs');</script>
{{> search}}
<div class="font-weight-bold">
    <h2>{{title}}</h2>
</div>
{{#if submission}}

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">DM</th>
      <th scope="col">Employee #</th>
      <th scope="col">Employee Name</th>
    </tr>
  </thead>
  <tbody>
    {{#each submission}}
    <tr>
      <th scope="row">{{_id}}</th>
      <td>{{dm}}</td>
      <td>{{employeeNum}}</td>
      <td>{{{makeLink "/admin/dashboard/viewFormDetails/backpay" _id "info" employeeName }}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{/if}}
{{#if result}}
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">DM</th>
      <th scope="col">Employee #</th>
      <th scope="col">Employee Name</th>
    </tr>
  </thead>
  <tbody>
    {{#each result}}
    <tr>
      <th scope="row">{{@key}}</th>
      <td>{{dm}}</td>
      <td>{{employeeNum}}</td>
    <td>{{{makeLink "/admin/dashboard/viewFormDetails/backpay" _id "info" employeeName }}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{/if}}
</div>